<UserControl x:Class="MufflonoSoft.CodeNinjaSpy.CodeNinjaSpyShell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Name="CodeNinjaSpy" Height="300" Width="300">
    <UserControl.Background>
        <RadialGradientBrush Center="0.5,0.5" GradientOrigin="0.75,0.25">
            <GradientStop Color="Black" Offset="1" />
            <GradientStop Color="#FF052700" Offset="0" />
        </RadialGradientBrush>
    </UserControl.Background>
    <Viewbox>
        <Grid Width="300" Height="300" x:Name="LayoutRoot">
            <TextBlock Text="{Binding LastShortcut, Mode=OneWay}" FontSize="36" Foreground="#FF00C000" Margin="0,0,0,54" HorizontalAlignment="Center" />
            <TextBlock Text="{Binding LastCommand, Mode=OneWay}" Foreground="#FF008600" Margin="0,247,0,0" Height="53" HorizontalAlignment="Center" />
        </Grid>
    </Viewbox>
</UserControl>